<div class="cart_title" >Ваш кошик</div>
<table>
  <%= render(cart.line_items) %>
  <tr class="total_line" >
    <td colspan="2" >Всього</td>
    <td class="total_cell" ><%= number_to_currency(cart.total_price) %></td>
  </tr>
</table>
<%= button_to "Замовити" , new_order_path, :method => :get %>

<%= button_to 'Очистити кошик' , cart, :method => :delete, :confirm => 'Ви впевнені?' %>
